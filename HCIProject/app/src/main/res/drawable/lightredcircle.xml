<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="2"
            android:useLevel="false">
            <solid android:color="#C2271E" />
            <stroke
                android:width="2dp"
                android:color="#C2271E" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="8px" android:right="8px" >
        <shape
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="2"
            android:useLevel="false">
            <solid android:color= "#FF7C74"
                />
            <size android:width="60dp" android:height="60dp"></size>
            <padding android:bottom="10dp"
                android:left="15dp"
                android:right="15dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>