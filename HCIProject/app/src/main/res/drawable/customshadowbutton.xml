<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#659204" />
            <corners android:radius="17dp"/>
            <stroke
                android:width="1dp"
                android:color="#81B906" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="8px" android:right="8px" >
        <shape android:shape="rectangle">
            <solid android:color= "#B7ED40" />
            <corners android:radius="17dp"/>
            <padding android:bottom="10dp"
            android:left="15dp"
            android:right="15dp"
            android:top="10dp" />
            <stroke
                android:width="1dp"
                android:color="#81B906" />

        </shape>
    </item>
</layer-list>