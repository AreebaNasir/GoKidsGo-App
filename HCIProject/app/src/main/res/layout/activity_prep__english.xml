<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prep_English"
    android:background="@drawable/scene8"
    android:id="@+id/r1">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FF1717"
        android:elevation="10dp"
        android:src="@drawable/circle_and_back"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/music_and_circle"
        android:background="@android:color/transparent"
        android:backgroundTint="#79A5F2"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:elevation="10dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_and_settings"
        android:background="@android:color/transparent"
        android:layout_toLeftOf="@+id/music"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#79A5F2"
        android:elevation="10dp"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/skincloud"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/music"
        >
        <Button
            android:id="@+id/animals"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customshadowbutton"
            android:text="ANIMALS"
            android:textSize="27dp"
            android:fontFamily="@font/gagalin"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/fruits"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customshadowbutton_skin"
            android:text="FRUITS"
            android:layout_marginLeft="20dp"
            android:textSize="27dp"
            android:textColor="#000"
            android:fontFamily="@font/gagalin"
            android:layout_marginTop="40dp"
            />

        <Button
            android:id="@+id/veg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customshadowbutton_lightblue"
            android:text="VEGETABLES"
            android:layout_marginLeft="20dp"
            android:textSize="27dp"
            android:textColor="#000"
            android:fontFamily="@font/gagalin"
            android:layout_marginTop="40dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/ps1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/pooh_with_pinkie" />

    <ImageView
        android:id="@+id/skincloud"
        android:layout_width="233dp"
        android:layout_height="182dp"
        android:layout_above="@+id/ps1"
        android:layout_marginLeft="-125dp"
        android:layout_marginBottom="-84dp"
        android:layout_toRightOf="@+id/ps1"
        android:src="@drawable/skincloud" />

    <TextView
        android:id="@+id/sen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ps1"
        android:layout_marginLeft="-76dp"
        android:layout_marginBottom="-16dp"
        android:layout_toRightOf="@+id/ps1"
        android:fontFamily="@font/atmabold"
        android:gravity="center"
        android:text="How much do \nyou know about \nalphabets"
        android:textColor="#EE2B21"
        android:textSize="15dp" />

</RelativeLayout>